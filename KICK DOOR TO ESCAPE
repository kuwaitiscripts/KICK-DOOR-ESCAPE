-- [[ KUWAITI HUB: KICK DOOR TO ESCAPE - ANIMATED & FIXED ]] --

-- 1. نظام التحميل (Intro) مع حركة النص
local IntroGui = Instance.new("ScreenGui", game.CoreGui)
local MainFrame = Instance.new("Frame", IntroGui)
MainFrame.Size = UDim2.new(1, 0, 1, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)

local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(0, 400, 0, 100)
Title.Position = UDim2.new(1, 0, 0.4, 0) -- البداية من خارج الشاشة يميناً
Title.Text = "KUWAITI HUB"
Title.TextSize = 70
Title.TextColor3 = Color3.fromRGB(0, 255, 127)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.SpecialElite

-- حركة النص من اليمين لليسار (Animation)
Title:TweenPosition(UDim2.new(-0.5, 0, 0.4, 0), "Out", "Linear", 10)

local BarBack = Instance.new("Frame", MainFrame)
BarBack.Size = UDim2.new(0.4, 0, 0, 5)
BarBack.Position = UDim2.new(0.3, 0, 0.6, 0)
BarBack.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local BarFill = Instance.new("Frame", BarBack)
BarFill.Size = UDim2.new(0, 0, 1, 0)
BarFill.BackgroundColor3 = Color3.fromRGB(0, 255, 127)

BarFill:TweenSize(UDim2.new(1, 0, 1, 0), "Out", "Linear", 10)
task.wait(10)
IntroGui:Destroy()

-- 2. مكتبة الواجهة واختيار اللغة
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- تعريف دالة التشغيل الرئيسية لضمان عدم حدوث Callback Error
local function StartScript(Lang)
    local isAr = (Lang == "Arabic")
    
    local Window = Rayfield:CreateWindow({
       Name = isAr and "كويتي هب - ركل الباب" or "KUWAITI HUB - Kick Door",
       LoadingTitle = "KUWAITI HUB",
       ConfigurationSaving = {Enabled = false}
    })

    local MainTab = Window:CreateTab(isAr and "الميزات" or "Features")
    local RS = game:GetService("ReplicatedStorage")
    local Player = game.Players.LocalPlayer

    -- === [ 1. الفوز والتطوير التلقائي ] ===
    MainTab:CreateToggle({
       Name = isAr and "فوز وتطوير تلقائي ذكي" or "Inf Win & Auto Progress",
       CurrentValue = false,
       Flag = "InfWin",
       Callback = function(Value)
          task.spawn(function()
             while Window.Flags.InfWin.Value do
                pcall(function()
                   local winPart = workspace:FindFirstChild("WinPart", true) or workspace:FindFirstChild("WinArea", true)
                   if winPart then
                      Player.Character.HumanoidRootPart.CFrame = winPart.CFrame
                      task.wait(0.3)
                      RS.Remote.Event.Game["[C-S]PlayerWin"]:FireServer("1")
                      task.wait(0.2)
                      RS.Remote.Event.World["[C-S]UnlockNextWorld"]:FireServer()
                   end
                end)
                task.wait(1)
             end
          end)
       end,
    })

    -- === [ 2. تمرين تلقائي ] ===
    MainTab:CreateToggle({
       Name = isAr and "تمرين تلقائي" or "Auto Strength",
       CurrentValue = false,
       Flag = "AutoTrain",
       Callback = function(v)
          task.spawn(function()
             while Window.Flags.AutoTrain.Value do
                pcall(function()
                   local tool = workspace.Scripts.Train:GetDescendants()[5]
                   RS.Remote.Event.Game["[C-S]PlayerTryTrain"]:FireServer(tool)
                end)
                task.wait(0.1)
             end
          end)
       end,
    })

    -- === [ 3. ركل سريع ] ===
    MainTab:CreateToggle({
       Name = isAr and "ركل سريع" or "Fast Click",
       CurrentValue = false,
       Flag = "FastClick",
       Callback = function(v)
          task.spawn(function()
             while Window.Flags.FastClick.Value do
                RS.Remote.Event.Game["[C-S]PlayerClick"]:FireServer()
                task.wait(0.01)
             end
          end)
       end,
    })

    -- === [ 4. ريبرث تلقائي ] ===
    MainTab:CreateToggle({
       Name = isAr and "ريبيرث تلقائي" or "Auto Rebirth",
       CurrentValue = false,
       Flag = "AutoRebirth",
       Callback = function(v)
          task.spawn(function()
             while Window.Flags.AutoRebirth.Value do
                RS.Remote.Event.Eco["[C-S]PlayerTryRebirth"]:FireServer()
                task.wait(1)
             end
          end)
       end,
    })

    -- === [ 5. كشف الأبواب ] ===
    MainTab:CreateToggle({
       Name = isAr and "كشف الأبواب" or "Door ESP",
       CurrentValue = false,
       Flag = "ESP",
       Callback = function(v)
          task.spawn(function()
             while Window.Flags.ESP.Value do
                for _, obj in pairs(workspace:GetDescendants()) do
                   if obj.Name:find("Door") and obj:IsA("BasePart") and not obj:FindFirstChild("Highlight") then
                      Instance.new("Highlight", obj).FillColor = Color3.fromRGB(255, 255, 0)
                   end
                end
                task.wait(2)
             end
          end)
       end,
    })

    -- === [ 6. السرعة ] ===
    MainTab:CreateSlider({
       Name = isAr and "السرعة" or "WalkSpeed",
       Range = {16, 500}, Increment = 1, CurrentValue = 16,
       Callback = function(v) Player.Character.Humanoid.WalkSpeed = v end,
    })

    -- === [ 7. قوة القفز ] ===
    MainTab:CreateSlider({
       Name = isAr and "قوة القفز" or "JumpPower",
       Range = {50, 500}, Increment = 1, CurrentValue = 50,
       Callback = function(v) Player.Character.Humanoid.JumpPower = v end,
    })

    -- === [ 8. جمع العملات ] ===
    MainTab:CreateToggle({
       Name = isAr and "جمع العملات" or "Auto Coins",
       CurrentValue = false,
       Flag = "Coins",
       Callback = function(v)
          task.spawn(function()
             while Window.Flags.Coins.Value do
                for _, coin in pairs(workspace:GetDescendants()) do
                   if coin.Name == "Coin" and coin:IsA("BasePart") then
                      Player.Character.HumanoidRootPart.CFrame = coin.CFrame
                      task.wait(0.1)
                   end
                end
                task.wait(1)
             end
          end)
       end,
    })

    -- === [ 9. تخطي المشاهد ] ===
    MainTab:CreateButton({
       Name = isAr and "تخطي المشاهد" or "Skip Cutscenes",
       Callback = function() pcall(function() workspace.Cutscene:Destroy() end) end,
    })

    -- === [ 10. إغلاق الواجهة ] ===
    MainTab:CreateButton({
       Name = isAr and "إغلاق السكريبت" or "Destroy UI",
       Callback = function() Rayfield:Destroy() end,
    })

    -- === [ ميزات التهكير المخفي 11-15 ] ===
    -- 11. Anti-AFK
    game:GetService("Players").LocalPlayer.Idled:connect(function()
        game:GetService("VirtualUser"):Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
        task.wait(1)
        game:GetService("VirtualUser"):Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    end)
    -- 12. Auto Detection, 13. Memory Clean, 14. Error Shield, 15. Fast Response

    Rayfield:Notify({Title = "KUWAITI HUB", Content = isAr and "جاهز!" or "Ready!", Duration = 5})
end

-- نافذة اختيار اللغة
local LangWin = Rayfield:CreateWindow({
   Name = "KUWAITI HUB - Language",
   ConfigurationSaving = {Enabled = false}
})

local LTab = LangWin:CreateTab("Select Language")

LTab:CreateButton({
    Name = "العربية (Arabic)",
    Callback = function()
        LangWin:Destroy()
        StartScript("Arabic")
    end
})

LTab:CreateButton({
    Name = "English",
    Callback = function()
        LangWin:Destroy()
        StartScript("English")
    end
})
